<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_approver_template_tree" model="ir.ui.view">
            <field name="name">account.approver.tree</field>
            <field name="model">account.approver</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="approval_type"/>
                    <field name="min_amount" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                    <field name="max_amount" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="company_currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="account_approver_template_form" model="ir.ui.view">
            <field name="name">account.approver.form</field>
            <field name="model">account.approver</field>
            <field name="arch" type="xml">
                <form string="Account Approver">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="ignore_notification"/>
                                <field name="approval_type"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="min_amount" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                                <field name="max_amount" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="company_currency_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_approver_action" model="ir.actions.act_window">
            <field name="name">Account Approver</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.approver</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create new account approver.
                </p>
            </field>
        </record>

        <menuitem name="Account Approval" id="account_approver_root_menu" parent="account.menu_finance_configuration" sequence="3"/>
        <menuitem name="Account Approver" id="account_approver_menu" action="account_approver_action" parent="account_approver_root_menu" sequence="10"/>
    </data>
</odoo>