<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_legere_nacha_approvals" model="ir.ui.view">
            <field name="name">account.move.form.inherit.legere_nacha_approvals</field>
            <field name="model">account.move</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,to_approve,posted</attribute>
                </xpath>
                <!-- Add ribbon to highlight: To Approve status -->
                <xpath expr="//div[@name='button_box']" position="before">
                    <widget name="web_ribbon" title="To Approve" bg_color="bg-warning" attrs="{'invisible': ['!', ('state', '=', 'to_approve')]}"/>
                </xpath>
                <!-- Add payment approval fields -->
                <xpath expr="//field[@name='purchase_vendor_bill_id']" position="after">
                    <field name="next_approval_id" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}"/>
                </xpath>
                <!-- Add Buttons to To Approve state -->
                <xpath expr="//button[@name='action_post']" position="after">
                    <button name="action_post" string="Confirm" class="oe_highlight"
                            type="object" groups="account.group_account_invoice" data-hotkey="v"
                            context="{'validate_analytic': True}"
                            attrs="{'invisible': [('state', '!=', 'to_approve')]}"/>
                </xpath>
                <xpath expr="//button[@name='button_draft']" position="after">
                    <button name="button_cancel" string="Cancel" type="object" groups="account.group_account_invoice" data-hotkey="w"
                            attrs="{'invisible' : [('state', '!=', 'to_approve')]}"/>
                    <button name="button_draft" string="Reset to Draft" type="object" groups="account.group_account_invoice"
                            attrs="{'invisible' : [('state', '!=', 'to_approve')]}" data-hotkey="q" />
                </xpath>
            </field>
        </record>

        <!-- Add warning highlighting to status column on Bills list view -->
        <record id="view_move_tree_inherit_legere_nacha_approvals" model="ir.ui.view">
            <field name="name">account.move.tree.inherit.legere_nacha_approvals</field>
            <field name="model">account.move</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="account.view_in_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="decoration-warning">state == 'to_approve'</attribute>
                </xpath>
            </field>
        </record>

        <!-- Add To Approve Filter to Bills list view -->
        <record id="view_account_move_filter_legere_nacha_approvals" model="ir.ui.view">
            <field name="name">account.move.filter.legere.nacha.approvals</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/filter[@name='draft']" position="after">
                    <filter name="draft" string="To Approve" domain="[('state','=','to_approve')]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
