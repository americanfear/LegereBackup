<?xml version="1.0"?>
<odoo>
    <record id="view_batch_payment_form" model="ir.ui.view">
        <field name="name">account.batch.payment.form</field>
        <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
        <field name="model">account.batch.payment</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position='before'>
                <field name="user_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>
            <xpath expr="//button[@name='validate_batch_button'][2]" position='attributes'>
                <attribute name="attrs">{'invisible': ['|', '|', ('state', '!=', 'draft'), ('payment_ids', '=', []), ('id', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning" role="alert" attrs="{'invisible': [('is_approval_pending', '=', False)]}">
                    <div attrs="{'invisible': [('approval_request_sent', '!=', False)]}">
                        This payment deposit requires approval. Please send request for approval.</div>
                    <div attrs="{'invisible': [('approval_request_sent', '=', False)]}">
                        This payment deposit is waiting for approval.
                    </div>
                    <button name="action_request_for_approve" type="object" string="Request Approval" attrs="{'invisible': ['|', ('is_approval_pending', '=', False), ('approval_request_sent', '=', True)]}" class="btn-primary"/>&amp;nbsp;
                    <button name="action_approve" type="object" string="Approve" attrs="{'invisible': ['|', ('is_approval_pending', '=', False), ('is_current_approver', '=', False)]}" class="btn-primary"/>&amp;nbsp;
                    <button name="%(stride_billpay.action_payment_approval_reject_reason)d" type="action" string="Reject" attrs="{'invisible': ['|', ('is_approval_pending', '=', False), ('is_current_approver', '=', False)]}"/>
                </div>
            </xpath>
            <xpath expr="//header" position="attributes">
                <attribute name="attrs">{'invisible': [('is_approval_pending', '=', True)]}</attribute>
            </xpath>
            <notebook position="inside">
                <field name="is_approval_pending" invisible="1"/>
                <field name="current_approval_id" invisible="1"/>
                <field name="is_current_approver" invisible="1"/>
                <field name="approval_request_sent" invisible="1"/>
                <page name="approvals" string="Approvals" attrs="{'invisible': [('approver_ids', '=', [])]}">
                    <field name="approver_ids">
                        <tree>
                            <field name="sequence"/>
                            <field name="name"/>
                            <field name="min_amount" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                            <field name="max_amount" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                            <field name="state"/>
                            <field name="approval_request_sent"/>
                            <field name="company_id" invisible="1"/>
                            <field name="company_currency_id" invisible="1"/>
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="min_amount" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                                    <field name="max_amount" widget='monetary' options="{'currency_field': 'company_currency_id'}"/>
                                </group>
                                <group>
                                    <field name="state"/>
                                    <field name="approval_request_sent"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="company_currency_id" invisible="1"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>