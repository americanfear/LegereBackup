<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_journal_form_inherit_legere_nacha_approvals" model="ir.ui.view">
            <field name="name">account.payment.form.inherit.legere_nacha_approvals</field>
            <field name="model">account.payment</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <!-- Hide Confirm button if payment needs approval -->
                <xpath expr="//button[@name='action_post']" position="attributes">
                    <attribute name="attrs">
                    {'invisible': ['|', '|', ('id', '=', False), ('state', '!=', 'draft'), '&amp;', ('state', '=', 'draft'), ('next_approval_id', '!=', False)]}
                    </attribute>
                </xpath>
                <!-- Hide Confirm button if payment needs approval -->
                <xpath expr="//button[@name='action_post']" position="before">
                    <button name="action_legere_approve" string="Approve" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('next_approval_id', '=', False)]}"/>
                    <button name="action_legere_reject" string="Reject" type="object"
                            attrs="{'invisible': ['|', ('state', '!=', 'draft'), '|', ('next_approval_id', '=', False), ('is_payment_approval_rejected', '=', True)]}"/>
                    <button name="action_legere_restart" string="Restart Approval" type="object"
                            attrs="{'invisible': ['|', ('id', '=', False), ('state', '!=', 'draft')]}"/>
                </xpath>
                <!-- Add ribbon to highlight: To Approve or Rejected status -->
                <xpath expr="//field[@name='id']" position="before">
                    <widget name="web_ribbon" title="To Approve" bg_color="bg-warning" attrs="{'invisible': ['|', ('state', '!=', 'draft'), '|', ('next_approval_id', '=', False), ('is_payment_approval_rejected', '=', True)]}"/>
                    <widget name="web_ribbon" title="Rejected" bg_color="bg-danger" attrs="{'invisible': ['|', ('state', '!=', 'draft'), '|', ('next_approval_id', '=', False), ('is_payment_approval_rejected', '=', False)]}"/>
                </xpath>
                <!-- Add payment approval fields -->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="is_payment_approval_rejected"/>
                    <field name="next_approval_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
