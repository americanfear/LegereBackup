<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form_inherit" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="stock.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@name='product_setting_container'][2]" position="inside">
				<div class="col-12 col-lg-6 o_setting_box" id="no_of_days">
					<div class="o_setting_right_pane">
						<label for="average_no_of_days"/>
						<div class="text-muted">
							Enter the number of days you want to average to calculate days of inventory.
						</div>
						<div class="content-group">
							<div class="mt16">
								<span>
									<field name="average_no_of_days" class="oe_inline"/>
								</span>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
