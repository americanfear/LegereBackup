<?xml version="1.0"?>
<odoo>
	<record model="ir.ui.view" id="view_stock_product_tree">
		<field name="name">product.product.tree</field>
		<field name="model">product.product</field>
		<field name="inherit_id" ref="stock.view_stock_product_tree"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='qty_available']" position="after">
				<field name="average_sold" optional="show"/>
				<field name="days_of_inventory" optional="show"/>
			</xpath>
		</field>
	</record>
	<record id="view_mrp_product_template_form_inherited" model="ir.ui.view">
		<field name="name">product.form.mrp.inherited</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="stock.view_template_property_form"/>
		<field name="arch" type="xml">
			<xpath expr="//label[@for='sale_delay']" position="before">
				<label for="average_sold" string="Average Sold" attrs="{'invisible':[('type','=','service')]}"/>
				<div attrs="{'invisible':[('type','=','service')]}">
					<field name="average_sold" class="oe_inline"/>
					Units per day
				</div>
				<label for="days_of_inventory" attrs="{'invisible':[('type','=','service')]}"/>
				<div attrs="{'invisible':[('type','=','service')]}">
					<field name="days_of_inventory" class="oe_inline"/>
					days
				</div>
			</xpath>
		</field>
	</record>
	<record model="ir.ui.view" id="view_product_category_form">
		<field name="name">product.category.form</field>
		<field name="model">product.category</field>
		<field name="inherit_id" ref="product.product_category_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='parent_id']" position="after">
				<field name="average_no_of_days" class="oe_inline"/>
			</xpath>
		</field>
	</record>
	<record model="ir.ui.view" id="view_warehouse_orderpoint_tree_editable">
		<field name="name">stock.warehouse.orderpoint.tree</field>
		<field name="model">stock.warehouse.orderpoint</field>
		<field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_min_qty']" position="before">
				<field name="use_days_of_inventory" optional="show"/>
			</xpath>
			<xpath expr="//field[@name='product_min_qty']" position="attributes">
				<attribute name="string">Min</attribute>
			</xpath>
			<xpath expr="//field[@name='product_max_qty']" position="attributes">
				<attribute name="string">Max</attribute>
			</xpath>
		</field>
	</record>
</odoo>