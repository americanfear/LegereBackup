<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="customer_sale_report_view_tree" model="ir.ui.view">
            <field name="name">customer.sale.report.tree</field>
            <field name="model">customer.sale.report</field>
            <field name="arch" type="xml">
                <tree string="Sales Analysis" create="0" edit="0">
                    <field name="product_id"/>
                    <field name="last_order_date"/>
                    <field name="last_order_qty"/>
                    <field name="last_order_price"/>
                    <field name="total_order_qty"/>
                    <field name="total_order_price"/>
                    <button name="action_view_report_lines" type="object" class='btn' icon="fa-file-text-o"/>
                </tree>
            </field>
        </record>

        <record id="customer_sale_report_pivot_view" model="ir.ui.view">
            <field name="name">customer.sale.report.pivot</field>
            <field name="model">customer.sale.report</field>
            <field name="arch" type="xml">
                <pivot string="Sales Analysis">
                    <field name="product_id" type="row"/>
                    <field name="last_order_date" type="col"/>
                    <field name="last_order_qty"/>
                    <field name="last_order_price"/>
                    <field name="total_order_qty"/>
                    <field name="total_order_price"/>
                </pivot>
            </field>
        </record>

        <record id="action_customer_sale_report" model="ir.actions.act_window">
            <field name="name">Sales Analysis</field>
            <field name="res_model">customer.sale.report</field>
            <field name="view_mode">tree,pivot</field>
        </record>

        <record id="customer_sale_report_line_view_tree" model="ir.ui.view">
            <field name="name">customer.sale.report.line.tree</field>
            <field name="model">customer.sale.report.line</field>
            <field name="arch" type="xml">
                <tree string="Sales Analysis Lines" create="0" edit="0">
                    <field name="order_number"/>
                    <field name="order_date"/>
                    <field name="product_id"/>
                    <field name="order_qty"/>
                    <field name="uom_id"/>
                    <field name="unit_price"/>
                    <field name="total_price"/>
                </tree>
            </field>
        </record>

        <record id="action_customer_sale_line_report" model="ir.actions.act_window">
            <field name="name">Sales Analysis Lines</field>
            <field name="res_model">customer.sale.report.line</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>