<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_payment_term_form">
            <field name="name">account.payment.term.form</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form" />
            <field name="arch" type="xml">
                <xpath expr='//field[@name="display_on_invoice"]' position='attributes'>
                    <attribute name="widget">boolean_toggle</attribute>
                </xpath>
                <xpath expr='//field[@name="display_on_invoice"]' position='after'>
                    <label for="thirty_days_term"/>
                    <field name="thirty_days_term" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_partner_form">
            <field name="name">res.partner.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <field name="vat" position="after">
                    <field name="olympia_login"/>
                    <field name="licensed"/>
                    <field name="license_number" attrs="{'invisible': [('licensed', '=', False)], 'required': [('licensed', '!=', False)]}"/>
                    <field name="license_expiration_date" attrs="{'invisible': [('licensed', '=', False)], 'required': [('licensed', '!=', False)]}"/>
                    <field name="NPI_number"  attrs="{'invisible': [('licensed', '=', False)], 'required': [('licensed', '!=', False)]}"/>
                </field>
                <xpath expr='//span[@name="address_name"]' position='before'>
                    <field name="id" readonly="1" string='Contact ID'/>
                    <field name="customer_sale_report_ids" invisible="1"/>
                </xpath>
                <xpath expr='//div[@name="button_box"]' position='inside'>
                    <button name="action_view_customer_sale_report" type="object"
                        class="oe_stat_button" icon="fa-file-text-o" groups="sales_team.group_sale_salesman" attrs="{'invisible': [('customer_sale_report_ids', '=', [])]}">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Sales Analysis</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_partner_tree">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <xpath expr='//field[@name="display_name"]' position='before'>
                    <field name="id" string='Contact ID'/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>