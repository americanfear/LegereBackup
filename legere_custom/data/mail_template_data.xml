        <record id="email_template_order_tracking" model="mail.template">
            <field name="name">Legere Order: Tracking</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="subject">Order shipped and tracking number is ready!</field>
            <field name="description">Send tracking info on dropship and fulfilled orders</field>
            <field name="email_from">Billing@legerepharm.com</field>
            <field name="reply_to">Billing@legerepharm.com</field>
            <field name="partner_to">{{ object.sale_id.partner_invoice_id.id if object.sale_id.partner_invoice_id.email else object.sale_id.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="box-sizing:border-box;margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.sale_id.license_partner_id.name or object.sale_id.partner_id.name or ''">Brandon Freeman</t>,
                        <br /><br />
                        Your order (<b>Ref #: <span t-out="object.sale_id.name or ''">S123456</span></b>) has been shipped.
                        <br /><br />
                        <t t-set="tracking_numbers" t-value="object.carrier_tracking_ref.split(',') if object.carrier_tracking_ref else []"/>
                        <t t-if="len(tracking_numbers) == 1">
                        The tracking number is <b><a t-att-href="object.carrier_tracking_url" t-out="object.carrier_tracking_ref or ''">ABCDEF123456</a></b>.<br />
                        </t>
                        <t t-if="len(tracking_numbers) &gt; 1">
                        The tracking numbers are:<br/>
                            <ul>
                                <li t-foreach="tracking_numbers" t-as="tn"><b><t t-out="tn or ''">ABCDEF123456</t></b></li>
                            </ul>
                        </t>
                       <br />
                        Do not hesitate to contact us if you have any questions.
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.sale_id.partner_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
        </record>

        <record id="mail_template_sale_confirmation" model="mail.template">
