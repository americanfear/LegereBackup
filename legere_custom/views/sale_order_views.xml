<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">
                    <field name="order_notes"/>
                </field>
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="action_email_order_update" attrs="{'invisible': [('state', '!=', 'sale')]}"
                            string="Email Order Update" groups="base.group_user" type="object" class="oe_highlight"
                            confirm="Are you sure you want to email the latest order info to the customer?"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>